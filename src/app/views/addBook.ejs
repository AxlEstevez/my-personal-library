<!DOCTYPE html>
<html lang="es">
    <head>
        <title>Liber|Home</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" href="./stylesheets/css/bootstrap.css">
        <link rel="stylesheet" type="text/css" href="/stylesheets/add_book.css">
        <link rel="icon" type="image/icon" href="/images/logo2.1.png">
        <link rel="stylesheet" type="text/css" href="./stylesheets/perfil.css" >
        <script src="./javascripts/main.js"></script>
    </head>
    <body>
        <% include partials/headerPerfil %>
        <% include partials/menuPerfil %>
        <br><br>
        <div class="addBook">
           
            <div class="login-form">
                <div class="ContentForm">
                <form action="addBook" method="POST">
                    <h1>Nuevo Libro</h1><br>
                    <div class="row">
                        <div class="col">
                            <label>Titulo del libro</label>                 
                            <input type="text" class="form-control" name="titulo" placeholder="Nombre del Libro" required><br/>
                        </div>
                        <div class="col">
                            <label>ISBN</label>                   
                            <input type="text" class="form-control" name="isbn" placeholder="ejemplo: 84-481-4512-7" required><br/>
                        </div>
                    </div> 

                    <div class="row">
                        <div class="col">    
                            <label>Edicion</label>
                            <input type="text" class="form-control" name="edicion" placeholder="ejemplo: 1" required><br/>
                        </div>

                    <div class="col"> 
                        <label>Idioma</label>
                        <input type="text" class="form-control" name="idioma" placeholder="ejemplo: Español" required><br/>
                    </div>

                    <div class="col"> 
                        <label>P&aacute;ginas</label>
                        <input type="text" class="form-control" name="paginas" placeholder="ejemplo: 276" required><br/>
                    </div>
                </div>

            <div class="row">    
                <div class="col"> 
                    <label>Autor</label>                   
                    <select class="form-control" name="autor" id="Autor" onchange="verificaSelectAutor();">
                        <option value="null"></option>
                        <% if(autors.length > 0){ %>
                            <% for(var i = 0; i < autors.length;i++){ %>
                                <option value=<%=autors[i].nombre + "#" + autors[i].apellido%>> 
                                    <%=autors[i].nombre + " " + autors[i].apellido %>
                                </option> 
                            <% } %>
                        <% } %>
                        <option value="otro" id="otro">otro</option>
                    </select>                   
                </div>

                <div class="col">     
                    <label>Género</label>
                    <select class="form-control" name="genero" id="Genero" onchange="verificaSelectG();">
                        <% if(generos.length > 0){ %>
                            <% for(var i = 0; i < generos.length;i++){ %>
                                <option value=<%=generos[i].nombre%>> 
                                    <%=generos[i].nombre%>
                                </option> 
                            <% } %>
                        <% } %>
                        <option value="otro" id="otroG">otro</option>
                    </select>
                   <br/>
                </div>

                <div class="col">   
                    <label>Editorial</label>
                    <select class="form-control" name="editorial" id="Editorial" onchange="verificaSelectE();">
                        <option value="null"> </option>
                        <% if(editoriales.length > 0){ %>
                            <% for(var i = 0; i < editoriales.length;i++){ %>
                                <option value=<%=editoriales[i].clave%>> 
                                    <%=editoriales[i].nombre%>
                                </option> 
                            <% } %>
                        <% } %>
                        <option value="otro" id="otroE">otro</option>
                    </select>
                   
                </div>
            </div>

                <input type="text" class="form-control" id="lista" name="lista" value="0" style="display: none;">
                <input type="submit" value="Agregar">
                </form>

                <div id="autor">
                    <input type="button" id="cerrar" value="x" onclick="cerrarVentanaA();">
                    <h3>Autor nuevo</h3>
                    <label for="nombre: ">Nombre</label>
                    <input type="text" class="form-control" id="nombreAutor">
                    <label for="apellidos: ">Apellidos</label>
                    <input type="text" class="form-control" id="apellidosAutor">
                    <input type="button"  id="enviarAutor" value="Enviar" onclick="agregaAutor();">
                </div>

                <div id="genero">
                    <input type="button" id="cerrar" value="x" onclick="cerrarVentana();">
                    <h3>Genero nuevo</h3>
                    <label for="nombre: ">Genero</label>
                    <input type="text" class="form-control" id="nombreGenero">
                    <input type="button"  id="enviarGenero" value="Enviar" onclick="agregarGenero();">
                </div>

                <div id="editorial">
                    <input type="button" id="cerrar" value="x" onclick="cerrarVentana();">
                    <h3>Editorial nuevo</h3>
                    <label for="nombre: ">Editorial</label>
                    <input type="text" class="form-control" id="nombreEditorial">
                    <input type="button"  id="enviarEditorial" value="Enviar" onclick="agregarEditorial();">
                </div>

            </div>
        </div>
		</div>
    </body>
</html>